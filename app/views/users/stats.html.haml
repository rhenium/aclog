- title "@#{@user.screen_name}'s Stats"
.container
  .row
    .col-sm-3.col-md-offset-1
      .sidebar
        = render_sidebar_content
    .col-sm-9.col-md-7.col-lg-6
      %h1
        %small #{@user.screen_name}'s
        Stats
      .favorite-graph
        - [["favorited_by", "Favorited by.."], ["favorited_users", "Favoriting.."]].each do |graph_id, graph_title|
          %div{id: graph_id}
            %h2= graph_title
            %template{data: {"v-if" => "!loading"}}
              .chart
                .chart-item{data: {"v-repeat" => "users", "v-style" => "width: (100 * count / reactions_count) + '%', background-color: colors[$index % colors.length]", "v-on" => "click: openTweets(this)"}}
                  .popout
                    %img{data: {"v-attr" => "src: profile_image_url"}}
                    .count
                      %span {{ count }}
                      favs
                .chart-item{data: {"v-style" => "background-color: colors[users.length % colors.length]"}}
                  %span Other {{ users_count - users.length }} People
              .statuses{data: {"v-if" => "showTweets"}}
                = render "tweets/tweets_template"
                .refresh-box<
                  %a{href: "{{ tweetsUrl }}"} &#187;
            .loading-box{data: {"v-if" => "loading"}}
              %img.loading-image{src: image_path("loading.gif")}
