- title "@#{@user.screen_name}'s Stats"
.container
  .row
    .col-sm-3.col-md-offset-1
      .sidebar
        = render_sidebar_content
    .col-sm-9.col-md-7.col-lg-6
      %h1
        %small #{@user.screen_name}'s
        Stats
      .favorite-graph
        #discovered_by
          %h2 Favorited by..
          %svg.chart{xmlns: "http://www.w3.org/2000/svg"}
        #discovered_users
          %h2 Favoriting..
          %svg.chart{xmlns: "http://www.w3.org/2000/svg"}
