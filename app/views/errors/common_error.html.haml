- title "#{response.status}: #{@message}"
.container
  - if sidebar?
    .row
      .col-sm-3.col-md-offset-1
        .sidebar
          = render_sidebar_content
      .col-sm-9.col-md-7.col-lg-6
        .error-page
          %h1= response.status
          %p= @message
        - if @details
          %pre= @details
  - else
    .error-page
      %h1= response.status
      %p= @message
    - if @details
      %pre= @details
